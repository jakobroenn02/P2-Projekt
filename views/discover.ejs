<%- include("./partials/header.ejs") %>
    <% if (!isLoggedIn) {%>
        <a href="/login">Log in please</a>
        <% } else { %>
            <h1>All groups</h1>
            <div class="groups-container">
                <% for(let i=0; i < allgroups.length; i++){%>
                    <div class="group-div">
                        <div class="group-div-top">
                            <div class="group-image-div">
                                <img class="group-image" src="/img/<%=allgroups[i].interest%>.jpeg">
                            </div>
                            <p class="group-name">
                                <%= allgroups[i].groupName%>
                            </p>
                        </div>
                        <div class="group-buttons">
                            <a href="./groups/<%=allgroups[i]._id%>" class="group-anchor-view">Show Group</a>
                        </div>
                    </div>

                    <%}%>
                        <%}%>
            </div>