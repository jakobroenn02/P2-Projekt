<%- include("./partials/header.ejs") %>
  <% if (!isLoggedIn) {%>
    <a href="/login">Log in please</a>
    <% } else { %>
      <h1 class="profile-welcome-title">Welcome <%= user.username %>
      </h1>

      <body>
        <div class="user-page-upper">
          <div class="profile-picture">
            <img class="profile-picture-picture" src="/img/70WoJVY.jpeg" />
            <input type="submit" class="change-picture-button" value="Change Profile Picture">
          </div>

          <div class="profile-bio">
            <form class="bio-form" method="post">
              <label for="Bio" class="profile-bio-title">Bio</label>
              <textarea class="input-profile-bio" id="Bio" name="Bio" rows="5" cols="30" placeholder="Flemming"
                maxlength="300"></textarea>
              <button type="submit" value="submit" class="submit-bio-button">Submit
            </form>
          </div>

          <div class="profile-information">
            <div class="profile-information-title">Change Your Information</div>
            <form class="profile-information-content-form" method="post">
              <div class="profile-information-content-item-title">Change First Name</div>
              <input class="profile-information-content-item-content" type="text"
                placeholder="<%= user.name.firstName  %> ">
              <div class="profile-information-content-item-title">Change Last Name</div>
              <input class="profile-information-content-item-content" type="text"
                placeholder="<%= user.name.lastName  %> ">
              <div class="profile-information-content-item-title">Change Username</div>
              <input class="profile-information-content-item-content" type="text" placeholder="<%= user.username  %> ">
              <div class="profile-information-content-item-title">Change Email</div>
              <input class="profile-information-content-item-content" type="text" placeholder="123@gmail.com">
              <div class="profile-information-content-item-title">Change Password</div>
              <input class="profile-information-content-item-content" type="password" placeholder="New Password">
            </form>
          </div>
        </div>

        <div class="user-page-lower">
          <div class="profile-interests-all">
            <div class="profile-interests-container-title">Your Interests</div>
            <div class="profile-interests-container">
              <% for(let i=0; i<user.interests.length; i++) {%>
                <div class="profile-interests">
                  <%= user.interests[i]%>
                </div>
                <%}%>
            </div>

            <div class="change-interests">If you want to change your interests, <a class="change-interests-anchor"
                href="/user/interests">CLICK HERE</a></div>
          </div>
          <div class="profile-groups-all">
            <div class="profile-groups-container-title">Your Groups</div>
            <div class="profile-groups-container">
              <% for (let i=0; i<user.groupIds.length; i++) {%>
                <div class="profile-groups">
                  <%= user.groupIds[i] %>
                </div>
                <%}%>
            </div>
          </div>
          <div class="profile-events-all">
            <div class="profile-events-container-title">Your Events</div>
            <div class="profile-events-container">
              <% for (let i=0; i<user.eventIds.length; i++) {%>
                <div class="profile-events">
                  <%= user.eventIds[i] %>
                </div>
                <%}%>
            </div>
          </div>

          <div class="pictures-modal">
            <div class="modal-header">
              <div class="modal-header-title">Change Profile Picture</div>
              <div class="modal-header-close"><i class="fa-solid fa-xmark close-mark"></i></div>
            </div>
            <div class="modal-pictures">
              <div class="modal-pictures-main">
                <div class="modal-main-picture-container">
                  <img src="/img/profileImg/profileImg<%= user.profileImageId %>.jpeg" alt="">
                </div>
              </div>
              <div class="modal-pictures-options">
                <div class="modal-pictures-options-container">
                  <img class="picture1" src="/img/Amerikansk Fodbold.jpeg" />
                </div>
                <div class="modal-pictures-options-container">
                  <img class="picture3" src="/img/skÃ¸jtning.jpeg" />
                </div>
                <div class="modal-pictures-options-container">
                  <img class="picture2" src="/img/Fodbold.jpeg" />
                </div>
              </div>
            </div>
          </div>
          <script src="/js/userpage.js"></script>
      </body>

      <%} %>